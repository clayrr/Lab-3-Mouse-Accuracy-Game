{
	"compilerOptions": {
		"outDir": "scripts",
		"module": "ESNext",
		"target": "ESNext",
		"rootDir": ".",
		"removeComments": true,
		"strict": true,
		"alwaysStrict": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"noFallthroughCasesInSwitch": true,
		"isolatedModules": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true
	},
	"include": ["game.ts"]
}
